<UserControl x:Class="WpfChoiceData.ChoiceDataControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfChoiceData"
             mc:Ignorable="d" 
            d:DesignHeight="30" Width="310">

    <DockPanel Height="30" Opacity="1">
        <Label Content="Отправитель:" FontSize="12"  />

        <ComboBox Name = "cbSenderSelect" Width="155" Height="30" SelectedIndex="0"/>

        <Button ToolTip="Добавить отправителя"  Click="AddSenderButton_Click">
            <Image Source="src/add.png" Height="15" Margin="2"/>
        </Button>
        <Button  ToolTip="Редактировать отправителя" Click="EditSenderButton_Click">
            <Image Source="src/edit.png" Height="15" Margin="2" />
        </Button>
        <Button ToolTip="Удалить отправителя"   Click="RemoveSenderButton_Click">
            <Image Source="src/remove.png" Height="15" Margin="2" />
        </Button>
    </DockPanel>
</UserControl>
